@model arriendojuegos.Models.ListModelUsuario.Usuario


@{Layout = null;

    List<SelectListItem> item = (List<SelectListItem>)ViewBag.datos;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    @Styles.Render("~/Content/register.css");
    <title>Formulario de Registro</title>
</head>
<body>
    <div class="container">

        <form class="login-form" method="post" action="@Url.Action("RegistrarUsuario","Usuario")">

            <h2><i class="material-icons">menu_book</i>AlquileBook</h2>
            <p>Ingresa tus Datos</p>
            <!--Primer Formulario-->
            <div id="primer-form">

                <input class="my-input" type="text" id="nombre" name="Nombre" placeholder="Nombre" required>

                <input class="my-input" type="email" id="usuario" name="Correo" placeholder="Correo" required>

                <input class="my-input" type="password" id="contraseña" name="Contraseña" placeholder="Contraseña" required>
            </div>
            <!--Segundo formulario-->
            <div id="segundo-form" style="display: none;">

                <input class="my-input" type="tel" id="telefono" name="telefono" placeholder="Telefono">


                <input class="my-input" type="text" id="direccion" name="Direccion" placeholder="Dirección">

                <div class="select-wrapper">
                    <select id="comuna" name="ComunaId">
                        <option value="" disabled selected>Selecciona una Comuna</option>
                        @foreach (var opcion in ViewBag.datos)
                        {
                            <option value="@opcion.Value">@opcion.Text</option>
                        }
                    </select>
                </div>
            </div>
            <!--Tercer Formulario-->
            <div id="tercer-form" style="display: none;">
                <div style="text-align: center;">
                    <label for="fechaNacimiento">Fecha de Nacimiento:</label>
                    <input type="date" id="fechaNacimiento" name="fechanacimiento">
                </div>
            </div>

            <div class="row" id="sexoRow" style="display: none; justify-content: center;">
                <div>
                    <label for="hombre">Hombre</label>
                    <input type="radio" id="hombre" name="SexoId" value="1">
                </div>
                <div>
                    <label for="mujer">Mujer</label>
                    <input type="radio" id="mujer" name="SexoId" value="2">
                </div>
            </div>
            <button id="continuarBtn" type="button" onclick="return (mostrarSiguienteFormulario())">Continuar</button>
            <label>¿Ya tienes una cuenta?</label>
            <a style="color:red" href="@Url.Action("Login","Usuario")">Iniciar Sesión</a>
        </form>
    </div>
    @Scripts.Render("~/Scripts/mostrarForm.js")
</body>


</html>

